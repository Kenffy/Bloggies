<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:vm="clr-namespace:KenffySoft.Bloggy.ViewModels" 
             xmlns:views="http://xamarin.com/schemas/2020/toolkit"
             x:Class="KenffySoft.Bloggy.Views.Users.FollowingPage"
             Title="Following">

    <!--<ContentPage.BindingContext>
        <vm:FollowingViewModel />
    </ContentPage.BindingContext>-->
    
    <ContentPage.Content>
        <StackLayout>
            <StackLayout>
                <ListView x:Name="FollowersList" Grid.Row="1"
                  HasUnevenRows="True"
                  ItemsSource="{Binding FollowingCollection}"
                  Margin="0">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>

                                <StackLayout Spacing="16" Margin="0,10" Padding="0">
                                    <!--Header-->
                                    <StackLayout Grid.Row="0" Orientation="Horizontal">

                                        <!--<views:AvatarView Text="{Binding Avatar}"  Source="{Binding ProfileImage}"
                                                                      VerticalOptions="StartAndExpand" Margin="8"/>-->

                                        <views:AvatarView Text="{Binding Avatar}"  Source="{Binding ProfileImage}"  
                                                                      Size="50" Color="{Binding AvatarColor}" TextColor="White" 
                                                                      VerticalOptions="StartAndExpand" Margin="8"/>

                                        <StackLayout Margin="2" VerticalOptions="Center">
                                            <Label Text="{Binding Name}" FontSize="Medium" 
                                           FontAttributes="Bold"
                                           VerticalOptions="Center"/>

                                            <Label Text="{Binding Description}" FontSize="Subtitle" 
                                           TextColor="DarkGray" FontAttributes="Italic"
                                               MaxLines="1"
                                               LineBreakMode="TailTruncation"
                                           VerticalOptions="Center"/>
                                        </StackLayout>
                                    </StackLayout>
                                </StackLayout>

                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>